@model WebApplication1.Models.Message


@using (Ajax.BeginForm("CreateMessage", "Blog", new { A_Id = ViewData["A_Id"] },
    new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "MessageList" }, new { }))
{
    <table>
        <tr>
            <td>
                @Html.TextBoxFor(model => model.Content, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Content)
            </td>
            <td>
                <input id="createMessage" class="btn btn-primary" type="submit" value="來留言" />
            </td>
        </tr>
    </table>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

